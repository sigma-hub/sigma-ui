{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["../../*"]
    },
    "isolatedModules": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
